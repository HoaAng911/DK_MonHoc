<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trang chủ</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Tạo khoảng cách giữa nội dung và footer */
        .main-content {
            flex: 1;
            /* Đẩy footer xuống dưới */
        }

        /* Tùy chỉnh navbar */
        .navbar {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-link {
            font-size: 1.1rem;
            margin-left: 1rem;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #ffeb3b !important;
        }

        /* Tùy chỉnh card môn học */
        .card {
            border: none;
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #333;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Tùy chỉnh footer */
        footer {
            background: linear-gradient(90deg, #007bff, #00c4cc);
            padding: 2rem 0;
        }

        footer p {
            margin: 0;
            font-size: 0.9rem;
        }

        footer a {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #ffeb3b;
        }

        /* Đảm bảo bố cục responsive */
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.2rem;
            }

            .nav-link {
                font-size: 1rem;
                margin-left: 0.5rem;
            }

            .card {
                margin-bottom: 1.5rem;
            }
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100 bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Quản lý môn học</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/courses">Danh sách môn học</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">Giới thiệu</a></li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-warning text-dark px-3" href="/login">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Nội dung chính -->
    <main class="container my-5 main-content">
        <h2 class="text-center mb-5 fw-bold text-primary">Các môn học nổi bật</h2>
        <div class="row g-4">
            <% courses.forEach(course=> { %>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= course.courseName %>
                            </h5>
                            <p class="card-text">
                                <i class="fas fa-users me-2"></i>Số lượng: <%= course.capacity %> sinh viên
                            </p>
                            <p class="card-text">
                                <i class="fas fa-calendar-alt me-2"></i>
                                <%= course.schedule %>
                            </p>
                            <a href="/courses/register/<%= course._id %>" class="btn btn-primary">
                                <i class="fas fa-check me-2"></i>Đăng ký
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </main>

    <!-- Footer cố định ở cuối -->
    <footer class="bg-dark text-white text-center">
        <div class="container">
            <p class="mb-2">© 2025 Quản lý khóa học. Mọi quyền được bảo lưu.</p>
            <p class="mb-2">
                <a href="mailto:support@example.com"><i class="fas fa-envelope me-2"></i>support@example.com</a> |
                <a href="tel:+84987654321"><i class="fas fa-phone me-2"></i>+84 987 654 321</a>
            </p>
            <p>
                Theo dõi chúng tôi:
                <a href="#" class="ms-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="ms-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="ms-2"><i class="fab fa-linkedin-in"></i></a>
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>